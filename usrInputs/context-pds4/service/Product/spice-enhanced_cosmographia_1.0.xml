    <Service>
        <name>SPICE-Enhanced Cosmographia</name>
        <abstract_desc>3D visualization of mission and instrument viewing geometry.</abstract_desc>
        <url>https://naif.jpl.nasa.gov/naif/cosmographia.html</url>
        <url>https://cosmoguide.org/</url>
        <release_date>2016-06-01</release_date>
